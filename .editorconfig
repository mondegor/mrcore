# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[{*.{bat,conf,sh,ts,yml},Dockerfile,Dockerfile.*}]
indent_size = 2
insert_final_newline = true

[*.{css,json,scss,raml}]
indent_size = 2

[*.go]
insert_final_newline = true

[*.md]
max_line_length = 160
trim_trailing_whitespace = false

[Makefile]
indent_style = tab